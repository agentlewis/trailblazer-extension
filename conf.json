{
  "opts": {
    "destination": "./doc/",
    "recurse": true,
    "private": false
  },
  "tags": {
    "allowUnknownTags": true
  },
  "source": {
    "exclude": [
      "lib/",
      "doc/",
      "package.json",
      "node_modules/"
    ],
    "include": [
      "README.md",
      "./"
    ],
    "includePattern": ".+\\.js$",
    "excludePattern": "(^|\\/|\\\\)_"
  },
  "plugins": [
    "plugins/markdown"
  ],
  "markdown": {
    "parser": "gfm"
  },
  "templates": {
    "cleverLinks": false,
    "monospaceLinks": false
  }
}
